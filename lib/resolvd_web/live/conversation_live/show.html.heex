<.header>
  <%= @conversation.subject %>
  <:subtitle>This is a conversation record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/conversations/#{@conversation}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit conversation</.button>
    </.link>
  </:actions>
</.header>
<div class="flow-root py-6">
  <ul id="messages" phx-update="stream" role="list" class="-mb-8">
    <li :for={{dom_id, message} <- @streams.messages} id={dom_id}>
      <div class="relative pb-8">
        <span class="absolute left-5 top-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true">
        </span>
        <div class="relative flex items-start space-x-3">
          <div class="relative">
            <%= if is_nil(message.customer_id) do %>
              <img
                class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-400 ring-8 ring-white"
                src={gravatar_avatar(message.user.email)}
                alt=""
              />
            <% else %>
              <img
                class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-400 ring-8 ring-white"
                src={gravatar_avatar(message.customer.email)}
                alt=""
              />
            <% end %>

            <span class="absolute -bottom-0.5 -right-1 rounded-tl bg-white px-0.5 py-px">
              <svg
                class="h-5 w-5 text-gray-400"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 2c-2.236 0-4.43.18-6.57.524C1.993 2.755 1 4.014 1 5.426v5.148c0 1.413.993 2.67 2.43 2.902.848.137 1.705.248 2.57.331v3.443a.75.75 0 001.28.53l3.58-3.579a.78.78 0 01.527-.224 41.202 41.202 0 005.183-.5c1.437-.232 2.43-1.49 2.43-2.903V5.426c0-1.413-.993-2.67-2.43-2.902A41.289 41.289 0 0010 2zm0 7a1 1 0 100-2 1 1 0 000 2zM8 8a1 1 0 11-2 0 1 1 0 012 0zm5 1a1 1 0 100-2 1 1 0 000 2z"
                  clip-rule="evenodd"
                />
              </svg>
            </span>
          </div>
          <div class="min-w-0 flex-1">
            <div>
              <div class="text-sm">
                <a href="#" class="font-medium text-gray-900">
                  <%= if is_nil(message.customer_id) do %>
                    User: <%= message.user.email %>
                  <% else %>
                    Customer: <%= message.customer.name %>
                  <% end %>
                </a>
              </div>
              <p class="mt-0.5 text-sm text-gray-500">Commented <%= message.inserted_at %> ago</p>
            </div>
            <div class="mt-2 text-sm text-gray-700">
              <article class="prose max-w-none">
                <%= message_body(message) %>
              </article>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>

<.live_component
  module={ResolvdWeb.ConversationLive.MessageComponent}
  id={:new}
  message={@message}
  action={:new}
  conversation={@conversation}
  current_user={@current_user}
/>

<.back navigate={~p"/conversations"}>Back to conversations</.back>

<.modal
  :if={@live_action == :edit}
  id="conversation-modal"
  show
  on_cancel={JS.patch(~p"/conversations/#{@conversation}")}
>
  <.live_component
    module={ResolvdWeb.ConversationLive.ConversationComponent}
    id={@conversation.id}
    title={@page_title}
    action={@live_action}
    conversation={@conversation}
    patch={~p"/conversations/#{@conversation}"}
  />
</.modal>
